<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="29dp"
        android:text="登录"
        android:textColor="#333333"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@null"
        android:layout_marginTop="43dp"
        android:padding="8dp"
        android:hint="邮箱"
        android:singleLine="true"
        android:maxLength="40"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:id="@+id/load_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="#ffbbbbbb"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"/>
    <EditText
        android:background="@null"
        android:layout_marginTop="38dp"
        android:padding="8dp"
        android:inputType="textWebPassword"
        android:hint="密码"
        android:singleLine="true"
        android:maxLength="40"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:id="@+id/load_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="#ffbbbbbb"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"/>

    <TextView
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:layout_marginTop="31dp"
        android:id="@+id/load_btn_load"
        android:background="#ffbbbbbb"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<!--



-->
    <FrameLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:checked="true"
            android:layout_marginTop="-8.5dp"
            android:layout_marginLeft="-60dp"
            android:button="@drawable/checkbox_selector_1_load"
            android:paddingLeft="16dp"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:id="@+id/load_btn_ytload"
            android:background="#0000"
            android:textColor="@drawable/load_lostpwd_selector"
            android:text="使用云图账号登录"
            android:textSize="26sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/load_btn_regist"
            android:background="#0000"
            android:textColor="@drawable/load_lostpwd_selector"
            android:text="注册"
            android:textSize="13sp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="57dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#bbbbbb"
            />

        <TextView
            android:text="第三方登录"
            android:textColor="#bbbbbb"
            android:textSize="13dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#bbbbbb"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/load_iv_weibo"
            android:background="@drawable/login_weibo"
            android:layout_width="43dp"
            android:layout_height="43dp"/>
        <ImageView
            android:id="@+id/load_iv_wechat"
            android:layout_marginLeft="50dp"
            android:background="@drawable/login_wechat"
            android:layout_width="43dp"
            android:layout_height="43dp"/>
    </LinearLayout>

</LinearLayout>