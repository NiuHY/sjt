<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:background="#e7000000"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <com.cmm.worldartapk.ui.ExtendedViewPager
        android:id="@+id/evp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/imagepre_vp_imageinfo"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="#202020"
            android:textSize="12sp"
            android:text="这里是图片描述"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:visibility="gone"
            android:id="@+id/imagepre_vp_imageinfo_btn"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="right"
            android:background="@drawable/image_info_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
    </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="#22000000"
        android:id="@+id/imagevp_btn_ll"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/imagepreview_blank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:id="@+id/imagevp_btngroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/imagevp_save"
                android:background="@drawable/image_vp_btn_selector"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#007aff"
                android:text="保存到本地"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/imagevp_add"
                android:background="@drawable/image_vp_btn_selector"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:textColor="#007aff"
                android:text="添加到收藏夹"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/imagevp_cancel"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="取消"
                android:textColor="#007aff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>