<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:visibility="gone"
    >

    <LinearLayout
        android:id="@+id/loading_anmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/loading_view_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/load_shape_1"/>

            <View
                android:id="@+id/loading_view_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/load_shape_2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">

            <View
                android:id="@+id/loading_view_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/load_shape_3"/>

            <View
                android:id="@+id/loading_view_4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/load_shape_4"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
